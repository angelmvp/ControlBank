import Layout  from "../layouts/Layout.astro"
---

<Layout title="login">
    <main>
        <section>
            <div class="buttons">
                <a href=".."><button class="btn">Regresar</button></a>
            </div>
        </section>
        <section>
            <article>
                <h1>INICIA SESION</h1>
            </article>    
            <article>
                <form action="IniciarSesion">
                    <label for="usuario">USUARIO o CORREO</label>
                    <input type="text" id="usuario" name="nombre-usuario">
                    <label for="password"> CONTRASEÃ‘A</label>
                    <input type="password" id="password" name="password-usuario">
                </form>
            </article>
            <article>
                <div class="buttons"> 
                    <a href="menu"><button class="btn"> Iniciar Sesion </button></a>
                </div>
            </article>
