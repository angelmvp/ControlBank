---
interface Props {
  fecha: Date;
  evento: string;
  descripcion: string;
  momio: number;
  cantidad_apostada: number;
  resultado: 'ganada' | 'perdida' | 'push';
}

const { fecha, evento, descripcion, momio, cantidad_apostada, resultado } = Astro.props;

// Calculate gain based on the result
let ganancia: number;
if (resultado === 'ganada') {
  ganancia = cantidad_apostada * (momio / 100) + cantidad_apostada; // Assuming momio is the odds in a format like +100
} else if (resultado === 'perdida') {
  ganancia = 0;
} else if (resultado === 'push') {
  ganancia = cantidad_apostada;
}
---

<div class="apuesta">
  <h2>Detalle de Apuesta</h2>
  <p>Fecha:  {fecha}</p>
  <p> Evento:  {evento}</p>
  <p> Descripci√≥n:  {descripcion}</p>
  <p> Momio:  {momio}</p>
  <p> Cantidad Apostada:  {cantidad_apostada}</p>
  <p> Resultado:  {resultado}</p>
  <p> Ganancia:  {ganancia}</p>
</div>

