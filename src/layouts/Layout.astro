---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot/>
		<footer>
			<Footer/>
		</footer>
	</body>
</html>
<style is:global>
	 :root {
		--primary-green: rgb(64, 163, 40);
		--green-dark: rgb(16, 71, 16);
		--green-light: rgb(185, 247, 185);
		--primary-blue: blue;
		--blue-light: blue;
		--red-lost:rgb(233, 69, 69);
		--green-win: rgb(54, 235, 54);
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	} 
